        <shape>
            <corners android:topLeftRadius="30dp" android:topRightRadius="30dp"/>
            <solid android:color="#aa707070"/>
            <stroke android:width="1dp" android:color="#ff000000"/>
        </shape>
    </item>
    <item >
        <shape>
            <corners android:topLeftRadius="30dp" android:topRightRadius="30dp"/>
            <solid android:color="#55707070"/>
            <stroke android:width="1dp" android:color="#ff000000"/>
        </shape>
    </item>
</selector>